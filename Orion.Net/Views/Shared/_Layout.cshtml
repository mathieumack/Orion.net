@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Orion</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <script src="~/lib/kendo/dist/js/jquery.min.js"></script>
    <script src="~/lib/signalr/dist/signalr.js"></script>
    <script src="~/lib/kendo/dist/js/kendo.ui.core.min.js"></script>
    <script src="~/lib/sbadmin2/dist/sb-admin-2.js"></script>

    <link rel="stylesheet" href="~/lib/kendo/dist/styles/kendo.common.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/kendo/dist/styles/kendo.bootstrap.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/fontawesome/dist/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/sbadmin2/dist/sb-admin-2.min.css" asp-append-version="true" />

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>

<body class="h-100" id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        @Html.Partial("_menu")

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small" id="UserName">@Model.Name</span>
                                <i class="fas fa-user fa-sm fa-fw mr-2 primary"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white" id="testClick">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <small id="testFooter">&#169; Orion.net @(DateTime.Now.Year)</small>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    @RenderSection("Scripts", required: false)
</body>
</html>
