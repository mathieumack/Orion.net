<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Orion</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <script src="/lib/kendo/dist/js/jquery.min.js"></script>

    <link rel="stylesheet" href="~/lib/kendo/dist/styles/kendo.common.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/kendo/dist/styles/kendo.bootstrap.min.css" asp-append-version="true" />
    <script src="/lib/kendo/dist/js/kendo.ui.core.min.js"></script>

    <script src="/js/OrionHub.js"></script>

    <link rel="stylesheet" href="~/lib/fontawesome/dist/css/all.css" asp-append-version="true" />


    <link rel="stylesheet" href="~/lib/sbadmin2/dist/sb-admin-2.min.css" asp-append-version="true" />
    <script src="/lib/sbadmin2/dist/sb-admin-2.js"></script>

    <script src="/lib/signalr/dist/signalr.js"></script>
</head>
<body class="fixed-nav sticky-footer bg-light" id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <!--<a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Home">-->
            <div class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Orion.net</div>
            </div>

            <!--</a>-->
            <!-- Divider -->
            <hr class="sidebar-divider my-0" />

            @Html.Partial("_menu")
        </ul>
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                </nav>

                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white" id="testClick">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <small id="testFooter">&#169; Orion.net @(DateTime.Now.Year)</small>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    @RenderSection("Scripts", required: false)
</body>
</html>
