<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Care center</h1>
</div>

<div class="row">
    <div class="col">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Connected users</h6>
            </div>
            <div class="card-body">
                <div class="demo-section k-content">
                    <div id="tabstrip">
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4" id="blocCurrentConnection">
        </div>
    </div>
</div>

<script type="text/x-kendo-template" id="connectedUserDetailTemplate">
    <div identifier="detailElement_#:connectionId#" class="currentConnectionDetail">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Current connection detail of #:connectionId#</h6>
        </div>
        <div class="card-body">
            <div class="demo-section k-content">
                <div>
                    Détail de l'élément
                </div>
                <div class="row">
                    <div class="col col-md-2">
                        <input identifier="detailElement_commands_#:connectionId#" value="" style="width: 100%;" />
                    </div>
                    <div class="col col-md-8">
                        <input type="text" identifier="detailElement_commands_params_#:connectionId#" class="form-control" placeholder="set parameters here">
                    </div>
                    <div class="col col-md-2">
                        <a class="d-none d-sm-inline-block btn btn-sm btn-dark shadow-sm" onclick="sendCommand('#:connectionId#')">
                            <span class="icon text-white-50">
                                <i class="fas fa-check"></i>
                            </span>
                            <span class="text">send</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>

<script type="text/x-kendo-template" id="connectedUserCardTemplate">
    <div class="col-xl-3 col-md-6 mb-4" connectionId="#:connectionId#" onclick="loadClient('#:connectionId#')">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">#:connectionId#</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">#:userName#</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>

<script type="text/javascript">

    function sendCommand(connectionId) {
        var dropdownlist = $("input[identifier = 'detailElement_commands_" + connectionId + "']").data("kendoDropDownList");
        connection.invoke("SendCommandToClient",
            {
                ConnectionId: connectionId,
                CommandTitle: dropdownlist.text(),
                CommandParam: $("input[identifier='detailElement_commands_params_" + connectionId + "']").val()
            }).catch(function (err) {
                return console.error(err.toString());
            });

        //Display result Test
        displayResult();
    }

</script>

